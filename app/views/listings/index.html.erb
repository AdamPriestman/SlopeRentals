<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path "Ski-slope-banner-image-1600x393.jpg" %>);">
  <div class="container">
    <h1>Find the perfect ski equipment for your snowy holiday</h1>
    <p>Advertise and browse skiing equipment in your area</p>
  </div>
</div>

<div class="d-flex">
  <div data-controller="filter" class="filter_sidebar">
    <button class="filter_button btn" data-filter-target="button" data-action="click->filter#expandFilters"><i class="fa-solid fa-sliders fa-l"></i> Filter</button>
      <div class="filters d-none filter py-3 my-3" data-filter-target="filters">
        <div class="d-flex filter-header justify-content-between">
          <h3>Filters</h3>
          <button data-action="click->filter#closeFilters" class="btn filter_x" do><i class="fa-solid fa-x"></i></button>
        </div>
        <h5 class="filter_heading">Item type</h5>
        <div class="filter_sub d-flex align-items-center">
          <ul>
            <li>
              <label for="snowboard">Snowboard</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
            <li>
              <label for="snowboard">Helmet</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
            <li>
              <label for="snowboard">Gloves</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
            <li>
              <label for="snowboard">Skis</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
          </ul>
        </div>
        <h5 class="filter_heading">Condition</h5>
        <div class="filter_sub d-flex align-items-center">
          <ul>
            <li>
              <label for="snowboard">Brand new</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
            <li>
              <label for="snowboard">Excellent</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
            <li>
              <label for="snowboard">Very good</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
            <li>
              <label for="snowboard">Good</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
            <li>
              <label for="snowboard">Well worn</label>
              <input type="checkbox" id="condition" name="snowboard" value="snowboard">
            </li>
          </ul>
        </div>
      </div>
  </div>

  <div class="row container d-flex justify-content-center">
    <div class="listings mt-3">
      <div id="listings">
        <% @listings.each do |listing| %>
          <%= link_to listing_path(listing) do %>
            <%= render "listing_card", listing:listing %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
